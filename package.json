{
  "name": "evidenra-team-multimedia",
  "version": "0.1.0",
  "private": true,
  "description": "EVIDENRA Team Multimedia - Qualitative Research Platform for Teams",
  "author": {
    "name": "EVIDENRA Team",
    "email": "team@evidenra.com"
  },
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:web": "pnpm --filter @evidenra/web dev",
    "dev:api": "pnpm --filter @evidenra/api dev",
    "build": "pnpm -r run build",
    "build:web": "pnpm --filter @evidenra/web build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @evidenra/supabase migrate",
    "db:generate": "pnpm --filter @evidenra/supabase generate",
    "db:reset": "pnpm --filter @evidenra/supabase reset"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "terser": "^5.46.0",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {}
  }
}
